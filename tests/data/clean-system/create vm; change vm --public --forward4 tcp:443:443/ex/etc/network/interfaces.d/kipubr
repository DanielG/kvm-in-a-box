auto kipubr
iface kipubr inet static
  bridge_ports   kipubr-vm
  bridge_stp     off
  bridge_maxwait 0
  bridge_fd      0
  address        10.0.0.1
  netmask        16
  pre-up ip tuntap add dev kipubr-vm mode tap user kib-vm
  pre-up ip link set kipubr-vm up
  up ip -6 addr add 2001:db8::2/64 dev kipubr
  down ip -6 addr del 2001:db8::2/64 dev kipubr
  post-down ip link set kipubr-vm down
  post-down ip tuntap del dev kipubr-vm mode tap
